{
	"body": {
		"all": {
			"args": {
				"error-code": {"data": ["req", "form", "errors", {"data": ["name"]}, "code"]}
			},
			"apply": {
				"fill": {"file": "edit.html"},
				"args" : {
					"value" : {"data": ["req", "form", "src", {"data": ["name"]}]},
					"error-msg" : {
						"if": {"data": ["error-code"]},
						"true": {"fill": "Ошибка {error-code}"}
					}
				}
			}
		}
	}
}